<%- include ../partials/navbar %>
<%- include ../partials/notifications %>

<div class="container">
  <form class="flex-column setbill-form" action="/bills/setBill" method="post">

    <div class="flex-column">
      <% items.forEach((item) => { %>
      <div class="flex-column">
        <p class="extra-margin setbill-section"><span><%= item.name %></span> <span><%= item.price %>â‚¬</span></p>
        <div class="flex-wrap">
            <% participants.forEach((participant) => { %>
                <div class="flex-column participant-radio-pair">
                  <label class="participant-label" for="item"><%= participant %></label>
                  <input class="radio-button" type="radio" name="<%= item.name %>" value="<%= participant %>">
                </div>
            <% }) %>
        </div>
      </div>
      <hr class="section-separator">
      <%})%>
      <button class="arrow-right" type="submit"><i class="fas fa-arrow-right"></i></button>
    </div>  

  </form>
</div>